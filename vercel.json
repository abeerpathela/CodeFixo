{
    "version": 2,
    "buildCommand": "cd frontend && npm run build",
    "builds": [
        {
            "src": "backend/server.js",
            "use": "@vercel/node"
        },
        {
            "src": "frontend/dist/**",
            "use": "@vercel/static"
        }
    ],
    "routes": [
        {
            "src": "/api/(.*)",
            "dest": "/backend/server.js"
        },
        {
            "src": "/(?!api).*",
            "dest": "/frontend/dist/index.html"
        }
    ],
    "env": {
        "NODE_ENV": "production"
    }
}